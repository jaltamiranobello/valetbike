
<%= render "devise/shared/links" %>

<div class="outer-container">
  <div class="image-section">
    <%= image_tag "login-image.jpg", alt: "Person on a bike" %>
  </div>

  <div class="login-form-container">
    <div class="login-form-inner-container">
      <h2>Welcome!</h2>
      <h3>Sign in to your account</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, placeholder: "hello@valetbike.com", autofocus: true, autocomplete: "email", class: "input-field" %>
        </div>

        <div class="field">
          <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "input-field" %>
        </div>

        <div class="actions">
          <%= f.submit "Login", class: "loginpage-button" %>
        </div>
<% end %>

<%= render "devise/shared/links" %>




